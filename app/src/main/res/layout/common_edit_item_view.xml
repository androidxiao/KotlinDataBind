<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/id_iv_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        tools:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/id_iv_icon"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="17dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_edittext_text"
        tools:text="标题"
        android:textSize="15sp"/>

    <com.kotlin.databinding.zhihu.widget.EditTextClear
        android:id="@+id/etc_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_right_unit"
        android:layout_toRightOf="@+id/tv_title"
        android:background="@null"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/color_edittext_text"
        android:textColorHint="@color/color_edittext_hint"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_right_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:textColor="@color/color_edittext_hint"
        android:textSize="15sp"/>

    <View
        android:id="@+id/cut_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/color_cut_line"/>

</RelativeLayout>